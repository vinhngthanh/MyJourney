<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>

    <h1 class="text-center mt-5">All Journeys</h1>

    <% for(let campground of campgrounds){ %>
        <div class="card mb-3 bg-dark">
            <div class="row">
                <div class="col-md-4">
                    <% if (campground.images.length) { %>
                        <img class="img-thumbnail" alt="" src="<%= campground.images[0].url %> ">
                        <% } else{%>
                            <img class="img-thumbnail" alt=""
                                src="https://res.cloudinary.com/ntv2806/image/upload/v1662692075/YelpCamp/vbdcgfqflpdtx4sj286h.webp">
                            <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body text-white bg-dark">
                        <h3 class="card-title">
                            <%= campground.title %>
                        </h3>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-white bg-dark border-light">
                            </li>
                            <li class="list-group-item text-white bg-dark border-light">
                                Location: <%= campground.location %>
                            </li>
                            <li class="list-group-item text-white bg-dark border-light mt-2">
                                <small class="">
                                    Description: <%= campground.description %>
                                </small>
                            </li>
                            <li class="list-group-item text-white bg-dark border-light">
                                Price: <%= campground.price %>
                            </li>
                            <li class="list-group-item text-white bg-dark border-light mt-2">
                                <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%=
                                        campground.title %></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features:<%-JSON.stringify(campgrounds) %>};
            </script>

            <script src="/javascripts/clusterMap.js"></script>